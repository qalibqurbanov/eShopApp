@model List<Category>

<div class="list-group">
    <a asp-controller="shop" asp-action="list" asp-route-id="" class="list-group-item list-group-item-action">All categories</a>
    @foreach (Category category in Model)
    {
        <a asp-controller="Shop"
            asp-action="List"
            asp-route-id="@category.CategoryID"
            class="list-group-item list-group-item-action @(ViewBag.SelectedCategory == category.CategoryID.ToString() ? "active" : "")">

                @category.CategoryName
        </a>
    }
</div>